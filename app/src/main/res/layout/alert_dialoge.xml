<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="10dp">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:srcCompat="@drawable/ic_action_erreur"
        />
    <TextView
        android:layout_gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informations incorrectes"
        android:textColor="@color/colorDark"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_gravity="left"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorDark"
        android:text="Nom d'utilisateur ou le Mot de passe incorrect.Veuillez réessayer ou réinitialiser votre mot de passe"
        />
    <LinearLayout
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:text="Réessayer"
        android:textStyle="bold"
        style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/acceptButton"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quitter"
        android:textStyle="bold"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:id="@+id/cancelButton"
        />
    </LinearLayout>
</LinearLayout>